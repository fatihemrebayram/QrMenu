<script>
        document.addEventListener("DOMContentLoaded", function () {
            var serviceToggleElements = document.querySelectorAll(".service-details-toggle");

            serviceToggleElements.forEach(function (toggleElement) {
                toggleElement.addEventListener("click", function () {
                    this.classList.toggle("active");
                });
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var addButton = document.getElementById('addButton');
            addButton.addEventListener('click', openAddModal);

            function openAddModal() {
                // Clear input fields
                var inputFields = document.querySelectorAll('#AddEdit input[type="text"]');
                inputFields.forEach(function (field) {
                    field.value = '';
                });

                // Clear checkboxes
                var checkboxes = document.querySelectorAll('#AddEdit input[type="checkbox"]');
                checkboxes.forEach(function (checkbox) {
                    checkbox.checked = false;
                });

                var numbers = document.querySelectorAll('#AddEdit input[type="number"]');
                numbers.forEach(function (number) {
                    number.value = '';
                });

                var emails = document.querySelectorAll('#AddEdit input[type="email"]');
                emails.forEach(function (email) {
                    email.value = '';
                });

                var dates = document.querySelectorAll('#AddEdit input[type="date"]');
                dates.forEach(function (date) {
                    date.value = '';
                });

            }
        });

    </script>
<script>
        $(function () {
            // Submit form using AJAX
            $('#Add_Form').submit(function (e) {
                e.preventDefault(); // Prevent the default form submission

                var form = $(this);
                var url = form.attr('action');
                var formData = new FormData(this);

                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            // Show success message using SweetAlert
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı',
                                text: 'İşlem başarılı!',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(function () {
                                window.location.href = response.redirectUrl;
                            });
                        } else {
                            // Handle the failure scenario
                            response.errors.forEach(function (error) {
                                // Update the corresponding error message element
                                $('#' + error.propertyName).text(error.errorMessage);
                                console.log('Error:', error.propertyName + ' ' + error);

                                // Show the error message using Toastr
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Hata!',
                                    text: error.errorMessage
                                });
                            });

                            console.log('Form submission failed.');
                        }
                    },
                    error: function () {
                        // Handle the error scenario
                        console.log('An error occurred during form submission.');
                    }
                });
            });
        });

    </script>

